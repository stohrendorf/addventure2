{
    "name": "application/addventure",
    "description": "A system for creating a forest of stories.",
    "license": "AGPL-3.0",
    "repositories": {
        "ckeditor": {
            "type": "package",
            "package": {
                "name": "ckeditor",
                "version": "4.2",
                "source": {
                    "url": "https://github.com/ckeditor/ckeditor-releases.git",
                    "type": "git",
                    "reference": "full/4.2.x"
                }
            },
            "package": {
                "name": "ckeditor",
                "version": "4.3",
                "source": {
                    "url": "https://github.com/ckeditor/ckeditor-releases.git",
                    "type": "git",
                    "reference": "full/4.3.x"
                }
            }
        }
    },
    "require": {
        "doctrine/orm": "~2.4",
        "ckeditor": "~4.3",
        "smarty/smarty": "~3.1",
        "twbs/bootstrap": "~3.1",
        "frameworks/jquery": "~2.1",
        "pear/log": "dev-master",
        "pear/pear_exception": "1.0.*@dev",
        "swiftmailer/swiftmailer": "~5.0",
        "ircmaxell/password-compat": "~1.0",
        "ext-apc": "*",
        "ext-ereg": "*",
        "ext-filter": "*",
        "ext-mbstring": "*",
        "ext-mysql": "*",
        "ext-mysqli": "*",
        "ext-PDO": "*",
        "ext-pdo_mysql": "*",
        "ext-session": "*",
        "ext-SimpleXML": "*",
        "ext-tidy": "*",
        "php": ">=5.4"
    },
    "autoload": {
        "psr-4": {
            "addventure\\": "dao/core/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~4.1",
        "phpunit/phpunit-skeleton-generator": "~2.0",
        "squizlabs/php_codesniffer": "2.0.0a2",
        "phpmd/phpmd": "~2.0"
    }
}
