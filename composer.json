{
    "name": "application/addventure",
    "description": "A system for creating a forest of stories.",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/stohrendorf/addventure2",
    "authors": [
        {
            "name": "Steffen Ohrendorf",
            "email": "steffen.ohrendorf@gmx.de",
            "role": "developer"
        }
    ],
    "support": {
        "issues": "https://github.com/stohrendorf/addventure2/issues",
        "wiki": "https://github.com/stohrendorf/addventure2/wiki",
        "source": "https://github.com/stohrendorf/addventure2"
    },
    "repositories": {
        "ckeditor": {
            "type": "package",
            "package": {
                "name": "ckeditor",
                "version": "4.3",
                "source": {
                    "url": "https://github.com/ckeditor/ckeditor-releases.git",
                    "type": "git",
                    "reference": "full/4.3.x"
                }
            }
        },
        "jqplot": {
            "type": "package",
            "package": {
                "name": "jqplot",
                "version": "1.0.8",
                "dist": {
                    "url": "https://bitbucket.org/cleonello/jqplot/downloads/jquery.jqplot.1.0.8r1250.zip",
                    "type": "zip"
                }
            }
        }
    },
    "require": {
        "symfony/console": "~2.6",
        "doctrine/orm": "~2.4",
        "ckeditor": "~4.3",
        "smarty/smarty": "~3.1",
        "smarty-gettext/smarty-gettext": "*",
        "twitter/bootstrap": "~3.3",
        "frameworks/jquery": "~2.1",
        "swiftmailer/swiftmailer": "~5.0",
        "mandrill/mandrill": "~1.0",
        "ircmaxell/password-compat": "~1.0",
        "monolog/monolog": "~1.9",
        "jqplot": "~1.0",
        "ext-ereg": "*",
        "ext-filter": "*",
        "ext-mbstring": "*",
        "ext-PDO": "*",
        "ext-session": "*",
        "ext-SimpleXML": "*",
        "ext-tidy": "*",
        "ext-mcrypt": "*",
        "ext-curl": "*",
        "php": ">=5.4"
    },
    "autoload": {
        "psr-4": {
            "addventure\\": "dao/core/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~4.1",
        "phpunit/phpunit-skeleton-generator": "~2.0",
        "phpunit/dbunit": "~1.3",
        "squizlabs/php_codesniffer": "2.0.0a2",
        "phpmd/phpmd": "~2.0",
        "sebastian/phpcpd": "~2.0",
        "phpdocumentor/phpdocumentor": "2.*",
        "ext-xdebug": ">=2.2",
        "ext-pdo_sqlite": "*"
    },
    "suggest": {
        "ext-mysql": "*",
        "ext-mysqli": "*",
        "ext-pdo_mysql": "*",
        "ext-apc": "*"
    }
}
